<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dip"
        android:layout_marginRight="8dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/record_bg" >

        <!-- android:background="@color/bbs_item" -->

        <com.edu.kygroup.widget.RoundImageView
            android:id="@+id/image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/pic_boy" />

        <TextView
            android:id="@+id/nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/image"
            android:text="舒淇"
            android:textColor="#485355"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/image"
            android:layout_marginLeft="6dp"
            android:layout_toRightOf="@+id/image"
            android:text="家里蹲大学"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/time_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:paddingTop="20dip"
            android:text="2014"
            android:textColor="#666666"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="5dp"
            android:text="无病呻吟"
            android:textColor="#666666"
            android:textSize="15sp" />

        <View
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="0.1dip"
            android:layout_below="@+id/content"
            android:layout_marginTop="8dip"
            android:background="@color/bbs_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/line" >

            <com.edu.kygroup.widget.DrawableCenterTextView
                android:id="@+id/btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_share"
                android:drawablePadding="3dip"
                android:padding="5dip"
                android:text="分享"
                android:textColor="@color/gray" />

            <View
                android:layout_width="0.5dip"
                android:layout_height="match_parent"
                android:background="@color/bbs_layout" />

            <com.edu.kygroup.widget.DrawableCenterTextView
                android:id="@+id/btn_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:drawableLeft="@drawable/icon_comment"
                android:drawablePadding="3dip"
                android:padding="5dip"
                android:text="回复"
                android:textColor="@color/gray" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>