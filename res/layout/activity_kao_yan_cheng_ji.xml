<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="科目1"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_object1_title"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="(例：101思想政治理论)"
                android:textSize="16sp" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="@color/bg_color" />

            <EditText
                android:id="@+id/edit_object1_fen"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="(例：68分)"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_object2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="科目2"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_object2_title"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="(例：201英语一)"
                android:textSize="16sp" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="@color/bg_color" />

            <EditText
                android:id="@+id/edit_object2_fen"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="(例：68分)"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_object3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="科目3"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_object3_title"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="(例：301数学一)"
                android:textSize="16sp" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="@color/bg_color" />

            <EditText
                android:id="@+id/edit_object3_fen"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="(例：68分)"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_object4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dip"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dip"
            android:text="科目4"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <EditText
                android:id="@+id/edit_object4_title"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="(例：963自动控制原理)"
                android:textSize="16sp" >
            </EditText>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dip"
                android:background="@color/bg_color" />

            <EditText
                android:id="@+id/edit_object4_fen"
                android:layout_width="match_parent"
                android:layout_height="50dip"
                android:background="@null"
                android:hint="(例：68分)"
                android:inputType="number"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:src="@drawable/add_focus" />

</LinearLayout>