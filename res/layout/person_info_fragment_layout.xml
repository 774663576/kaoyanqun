<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13dip"
            android:paddingTop="13dip"
            android:text="籍贯"
            android:textColor="#394257"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_jiguan"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_weight="1"
            android:gravity="left"
            android:text="TextView"
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dip"
        android:background="#e8eef3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13dip"
            android:paddingTop="13dip"
            android:text="院校"
            android:textColor="#394257"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_yuanxiao"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_weight="1"
            android:text="TextView"
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8eef3"
        android:paddingBottom="15dip"
        android:paddingLeft="15dip"
        android:paddingTop="15dip"
        android:text="报考院校"
        android:textColor="#394257"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/txt_baokao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:drawablePadding="15dip"
        android:drawableRight="@drawable/arrow_right"
        android:paddingBottom="15dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip"
        android:text="TextView"
        android:textColor="#999999"
        android:textSize="16sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e8eef3" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dip"
            android:paddingLeft="15dip"
            android:paddingTop="15dip"
            android:text="关注院校"
            android:textColor="#394257"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/img_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:src="@drawable/arrow_down_pressed" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txt_guanzhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:drawablePadding="15dip"
        android:drawableRight="@drawable/arrow_right"
        android:paddingBottom="15dip"
        android:paddingRight="10dip"
        android:paddingTop="15dip"
        android:textColor="#999999"
        android:textSize="16sp" />

    <!-- <RelativeLayout -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="wrap_content" > -->


    <!-- <View -->
    <!-- android:layout_width="match_parent" -->
    <!-- android:layout_height="0.7dip" -->
    <!-- android:layout_centerVertical="true" -->
    <!-- android:background="#e8eef3" /> -->


    <!-- <ImageView -->
    <!-- android:id="@+id/img_arrow" -->
    <!-- android:layout_width="wrap_content" -->
    <!-- android:layout_height="wrap_content" -->
    <!-- android:layout_centerHorizontal="true" -->
    <!-- android:layout_gravity="center" -->
    <!-- android:paddingLeft="15dip" -->
    <!-- android:paddingRight="15dip" -->
    <!-- android:src="@drawable/arrow_down_pressed" /> -->
    <!-- </RelativeLayout> -->

    <com.edu.kygroup.widget.KyListView
        android:id="@+id/focus_uni_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000"
        android:divider="#e8eef3"
        android:dividerHeight="0.7dip"
        android:headerDividersEnabled="true"
        android:listSelector="#00000000"
        android:visibility="gone" >
    </com.edu.kygroup.widget.KyListView>

    <View
        android:layout_width="match_parent"
        android:layout_height=" 13dip"
        android:background="#e8eef3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13dip"
            android:paddingTop="13dip"
            android:text="备考"
            android:textColor="#394257"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_beikao"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_weight="1"
            android:text="应届生"
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dip"
        android:background="#e8eef3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:gravity="center_vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="13dip"
            android:paddingTop="13dip"
            android:text="战况"
            android:textColor="#394257"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/txt_zhankuang"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dip"
            android:layout_weight="1"
            android:text="备考"
            android:textColor="#999999"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>